apiVersion: v1
kind: ConfigMap
metadata:
  name: argocd-cm
  namespace: {{ argocd_vars.kubernetes.namespace }}
  labels:
    app.kubernetes.io/name: argocd-cm
    app.kubernetes.io/part-of: argocd
data:
  accounts.{{ argocd_map.credentials.server.user.name }}: apiKey, login
  accounts.{{ argocd_map.credentials.server.user.name }}.enabled: 'true'
  admin.enabled: 'false'
