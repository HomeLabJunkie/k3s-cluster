apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: {{ item.name }}-http
  namespace: {{ victoriametrics_vars.kubernetes.namespace }}
spec:
  hostnames:
    - {{ item.hostname }}
  parentRefs:
    - kind: Gateway
      name: {{ item.name }}
      namespace: {{ victoriametrics_vars.kubernetes.namespace }}
      sectionName: http
  rules:
    - filters:
        - requestRedirect:
            scheme: https
            statusCode: 301
          type: RequestRedirect
      matches:
        - path:
            type: PathPrefix
            value: /
