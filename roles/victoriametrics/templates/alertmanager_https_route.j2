apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: {{ victoriametrics_project.gateway.service.alertmanager }}-https
  namespace: {{ victoriametrics_vars.kubernetes.namespace }}
spec:
  hostnames:
    - {{ victoriametrics_project.hostname.alertmanager }}
  parentRefs:
    - kind: Gateway
      name: {{ victoriametrics_project.gateway.service.alertmanager }}
      namespace: {{ victoriametrics_vars.kubernetes.namespace }}
      sectionName: https
  rules:
    - backendRefs:
        - kind: Service
          name: {{ victoriametrics_project.gateway.service.alertmanager }}
          port: 9093
      matches:
        - path:
            type: PathPrefix
            value: /
