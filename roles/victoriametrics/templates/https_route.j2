apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: {{ item.name }}-https
  namespace: {{ victoriametrics_vars.kubernetes.namespace }}
spec:
  hostnames:
    - {{ item.hostname }}
  parentRefs:
    - kind: Gateway
      name: {{ item.name }}
      namespace: {{ victoriametrics_vars.kubernetes.namespace }}
      sectionName: https
  rules:
    - backendRefs:
        - kind: Service
          name: {{ item.name }}
          port: {{ item.port }}
      matches:
        - path:
            type: PathPrefix
            value: /
